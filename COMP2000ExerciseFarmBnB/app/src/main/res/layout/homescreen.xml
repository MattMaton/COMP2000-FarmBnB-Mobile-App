<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@color/background_green"
android:orientation="vertical" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Farm BnB"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

    <Button
        android:id="@+id/manage_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_green"
        android:textAllCaps="false"
        android:text="Manage Bookings"
        android:onClick="LoadManageBookings"
        android:textAlignment="textStart"
        android:textColor="@color/white" />

        <Button
            android:id="@+id/accomodation_farmhouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background_dark_green"
            android:drawableRight="@android:drawable/arrow_up_float"
            android:onClick="LoadFarmhouseDetails"
            android:text="Farmhouse"
            android:textAlignment="textStart"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/accomodation_shepherds_hut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:onClick="LoadShepherdsHutDetails"
            android:drawableRight="@android:drawable/arrow_up_float"
            android:backgroundTint="@color/background_dark_green"
            android:text="Luxury Shepherds Hut"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/accomodation_barn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:onClick="LoadBarnDetails"
            android:drawableRight="@android:drawable/arrow_up_float"
            android:backgroundTint="@color/background_dark_green"
            android:text="Self Catering Barn"
            android:textColor="@color/white" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_green"
        android:drawableLeft="@android:drawable/ic_media_previous"
        android:onClick="LogOut"
        android:text="Log out"
        android:textColor="@color/white"
        android:textAlignment="textStart"/>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>