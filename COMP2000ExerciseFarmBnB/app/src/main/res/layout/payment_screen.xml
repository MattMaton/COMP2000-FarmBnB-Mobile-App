<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_green">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_rowWeight="0.01"
            android:text="Farm BnB"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total due: Â£xxx.xx"
        android:layout_marginLeft="@dimen/fab_margin"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="10pt"/>

        <EditText
            android:id="@+id/UserCardNumber"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Card Number"
            android:inputType="number"/>

        <EditText
            android:id="@+id/UserCardExpiry"
            android:layout_width="367dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:hint="Expiry Date"
            android:inputType="date" />
    <EditText
        android:id="@+id/UserCardCVC"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="CVC"
        android:inputType="number" />

    <Button
        android:id="@+id/CreateNewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_colour"
        android:text="Submit"
        android:onClick="LoadOrderConfirmation"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_colour"
        android:text="Back"
        android:onClick="LoadHomePage"
        android:textAlignment="center"
        android:textColor="@color/white" />


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>